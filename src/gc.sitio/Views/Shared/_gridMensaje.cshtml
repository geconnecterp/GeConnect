
@model RespuestaGenerica<EntidadBase>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container mt-4 bg-white rounded-4 p-4">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="message-header info-message">
                        <div class="media-left padding-5">
                            @if (Model.EsError)
                            {
                                <i class="bx bx-error-circle text-danger"></i>
                                <input type="hidden" id="msgError" value="true" />
                            }
                            else if (Model.EsWarn)
                            {
                                <i class="bx bx-shape-triangle text-warning"></i>
                                <input type="hidden" id="msgWarn" value="true" />

                            }
                            else
                            {
                                <i class="bx bx-check-circle text-success"></i>
                                <input type="hidden" id="msgSucc" value="true" />
                            }

                        </div>
                        <div class="card-body">
                            <h3>Importante</h3>
                            <p class="text-muted">
                                @Model.Mensaje
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>   
</div> 