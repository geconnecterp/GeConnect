@model RespuestaGenerica<EntidadBase>

@{
    var tipoMensaje = "info";
    var iconoMensaje = "bxs-info-circle";  // Cambiado a icono sólido
    var colorBorde = "primary";
    var tituloMensaje = "Información";
    var bgIcono = "bg-primary";
    var colorIcono = "white";  // Garantizar contraste con fondo primary

    if (Model.EsError)
    {
        tipoMensaje = "error";
        iconoMensaje = "bxs-error-circle";  // Cambiado a icono sólido
        colorBorde = "danger";
        colorIcono = "white";
        bgIcono = "bg-danger";
        tituloMensaje = "Error";
        <input type="hidden" id="msgError" value="true" />
    }
    else if (Model.EsWarn)
    {
        tipoMensaje = "warning";
        iconoMensaje = "bxs-error-triangle";  // Cambiado a un icono sólido más reconocible
        colorBorde = "warning";
        colorIcono = "dark";  // Texto oscuro para contraste con fondo amarillo
        bgIcono = "bg-warning";
        tituloMensaje = "Advertencia";
        <input type="hidden" id="msgWarn" value="true" />
    }
    else if (Model.Ok)
    {
        tipoMensaje = "success";
        iconoMensaje = "bxs-check-circle";  // Cambiado a icono sólido
        colorBorde = "success";
        colorIcono = "white";
        bgIcono = "bg-success";
        tituloMensaje = "Éxito";
        <input type="hidden" id="msgSucc" value="true" />
    }
    else
    {
        <input type="hidden" id="msgInfo" value="true" />
    }
}
<div class="golden-message-container animate__animated animate__fadeIn">
    <div class="card golden-message golden-message-@tipoMensaje border-@colorBorde shadow">
        <div class="card-header bg-transparent border-0 d-flex align-items-center p-3">
            <div class="golden-message-icon @bgIcono rounded-circle me-3 shadow-sm d-flex align-items-center justify-content-center">
                <i class="bx @iconoMensaje fs-3 text-@colorIcono"></i>
            </div>
            <h5 class="card-title mb-0 fw-bold text-@colorBorde">@tituloMensaje</h5>
        </div>
        <div class="card-body pt-0 pb-3">
            <div class="golden-message-content ms-5">
                <p class="text-dark mb-0 fs-6">
                    @Model.Mensaje
                </p>
            </div>
        </div>
    </div>
</div>

<script>
    $(function() {
        // Añadir efecto de pulso al icono en mensajes de error y advertencia
    @if (Model.EsError || Model.EsWarn)
    {
        <text>
                setTimeout(function() {
                    $('.golden-message-icon').css('animation', 'pulse 2s infinite');
                }, 1000);
        </text>
    }
    });
</script>
