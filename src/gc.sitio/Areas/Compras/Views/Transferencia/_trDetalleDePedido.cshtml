@model TRDetallePedidoDto

<div class="modal-header">
	<h5 class="modal-title" id="modalCenterTitle">@Model.Titulo</h5>
	<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
	<div class="table-responsive text-nowrap table-wrapper-xs">
		<table class="table table-bordered table-hover" id="tbDetalleDePedido">
			<thead class="table-dark">
				<tr>
					<th style="width:10%;" class="align-center">PI</th>
					<th style="width:10%;" class="align-center">Orden</th>
					<th style="width:10%;" class="align-center">Prod ID</th>
					<th style="width:40%;" class="align-center">Descripción</th>
					<th style="width:10%;" class="align-center">Cantidad</th>
					<th style="width:10%;" class="align-center">Enviado</th>
					<th style="width:10%;" class="align-center">Stk</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.Detalle.ListaDatos)
				{
					<tr onclick="selectTRDetalleDePedido(this)">
						<td class="align-center">@item.pi_compte</td>
						<td class="align-center">@item.pid_item</td>
						<td class="align-center">@item.p_id</td>
						<td class="align-left">@item.p_desc</td>
						<td class="align-right">@item.pid_cantidad</td>
						<td class="align-right">@item.pid_enviado</td>
						<td class="align-right">@item.pid_stk</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
		Cerrar
	</button>
</div>
