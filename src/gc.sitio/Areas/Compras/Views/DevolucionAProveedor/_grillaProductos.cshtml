@model GridCore<ProductoADevolverDto>;

<div class="table-responsive table-wrapper-full-width">
	<table class="table table-bordered table-hover" id="tbDetalleDeProductosADevolver">
		<thead class="table-dark">
			<tr>
				<th style="width:5%;" class="col-header-small align-center">ID</th>
				<th style="width:20%;" class="col-header-small align-center">Descripción</th>
				<th style="width:5%;" class="col-header-small align-center">Cta</th>
				<th style="width:10%;" class="col-header-small align-center">Box</th>
				<th style="width:5%;" class="col-header-small align-center">Stk Actual</th>
				<th style="width:5%;" class="col-header-small align-center">Ajuste</th>
				<th style="width:5%;" class="col-header-small align-center">Stock Ajustado</th>
				<th style="width:0%; display:none;">as_motivo</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.ListaDatos)
			{
				var res = string.Format(CultureInfo.InvariantCulture,"{0:#,0.000}", @item.as_resultado);
				var stk_actual = string.Format(CultureInfo.InvariantCulture, "{0:#,0.000}", @item.as_stock);
				var ajuste = string.Format(CultureInfo.InvariantCulture, "{0:#,0.000}", @item.as_ajuste);
				<tr onclick="selectListaProductoRow(this)">
					<td class="align-center">@item.p_id</td>
					<td class="align-left">@item.p_desc</td>
					<td class="align-center">@item.cta_id</td>
					<td class="align-center">@item.box_desc</td>
					<td class="align-center">@stk_actual</td>
					<td class="align-right">@ajuste</td>
					<td class="align-right">@res</td>
					<td style="display:none;">@item.as_motivo</td>
				</tr>
			}
		</tbody>
	</table>
</div>