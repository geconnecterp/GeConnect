@model GridCoreSmart<ValoresDesdeObligYCredDto>
@using static gc.infraestructura.Helpers.GridHelper
@{
}
<div class="row" style="padding-right: 0px;">
	<div class="col-1">
		<button id="btnAgregarValor" class="btn btn-success btn-sm mt-2 me-1" type="button" title="Agregar">
			<i class="bx bx-plus bx-xs"></i>
		</button>
	</div>
	<div class="col-11 mt-2 table-responsive table-wrapper-200" id="containerValores_Paso2" style="padding-right: 0px;">
		<table class="table table-bordered table-hover" id="tbListaValores_Paso2">
			<thead style="background: dodgerblue;">
				<tr>
					<th style="width:35%;" class="col-header-small align-center tiny-row">Cuenta Financiera</th>
					<th style="width:55%;" class="col-header-small align-center tiny-row">Valor</th>
					<th style="width:10%;" class="col-header-small align-center tiny-row">Importe</th>
					<th style="width:0%; display:none;">orden</th>
				</tr>
			</thead>
			<tbody>
				@if (Model != null && Model.ListaDatos != null && Model.ListaDatos.Count > 0)
				{
					@foreach (var item in Model.ListaDatos)
					{
						<tr onclick="selectReg(this, 'tbListaValores_Paso2')" ondblclick="selectRegDblGrillaValores(this);">
							<td class="@Model.ObtenerClase(item.ctaf_denominacion) cell-fit-content">@Model.FormatearDato(item.ctaf_denominacion, FormatDato.Ninguno)</td>
							<td class="@Model.ObtenerClase(item.concepto_valor) cell-fit-content">@Model.FormatearDato(item.concepto_valor, FormatDato.Monto)</td>
							<td class="@Model.ObtenerClase(item.op_importe) cell-fit-content">@Model.FormatearDato(item.op_importe, FormatDato.Monto)</td>
							<td style="display:none;">@item.orden</td>
						</tr>
					}
				}
			</tbody>
		</table>
	</div>
</div>
