@model GridCore<RPROrdenDeCompraDetalleDto>
@{
}

<div class="table-responsive table-wrapper">
	<table class="table table-bordered table-hover" id="tbDetalleDeOC">
		<thead class="table-dark">
			<tr class="header">
				<th scope="col" class="table-fontsize" style="width:10%;">ID</th>
				<th scope="col" class="table-fontsize" style="width:30%;">Descripción</th>
				<th scope="col" class="table-fontsize" style="width:10%;">ID Prov</th>
				<th scope="col" class="table-fontsize" style="width:10%;">UxB</th>
				<th scope="col" class="table-fontsize" style="width:10%;">Btos</th>
				<th scope="col" class="table-fontsize" style="width:15%;">Unidades</th>
				<th scope="col" class="table-fontsize" style="width:15%;">Cantidad</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.ListaDatos)
			{
				<tr onclick="selectOCDetalleRow(this)">
					<td class="table-fontsize">@item.p_id</td>
					<td class="table-fontsize">@item.p_desc</td>
					<td class="table-fontsize">@item.p_id_prov</td>
					<td class="table-fontsize">@item.ocd_unidad_x_bulto</td>
					<td class="table-fontsize">@item.ocd_bultos</td>
					<td class="table-fontsize">@item.ocd_unidad_pres</td>
					<td class="table-fontsize">@item.ocd_cantidad</td>
				</tr>
			}
		</tbody>
	</table>
</div>