@model GridCore<ProductoBusquedaDto>
@{
}

<div class="table-responsive table-wrapper">
	<table class="table table-bordered table-hover" id="tbDetalleDeProd">
		<thead class="table-dark">
			<tr class="header">
				<th scope="col" class="table-fontsize align-center" style="width:10%;">ID</th>
				<th scope="col" class="table-fontsize align-center" style="width:20%">Descripción</th>
				<th scope="col" class="table-fontsize align-center" style="width:10%">ID Prov</th>
				<th scope="col" class="table-fontsize align-center" style="width:10%">OC</th>
				<th scope="col" class="table-fontsize align-center" style="width:10%">UP</th>
				<th scope="col" class="table-fontsize align-center" style="width:10%">Btos</th>
				<th scope="col" class="table-fontsize align-center" style="width:15%">Unidades</th>
				<th scope="col" class="table-fontsize align-center" style="width:15%">Cantidad</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.ListaDatos)
			{
				<tr onclick="selectDetalleDeProdRow(this)">
					<td class ="table-fontsize align-center">@item.P_id</td>
					<td class="table-fontsize align-left">@item.P_desc</td>
					<td class="table-fontsize align-center">@item.P_id_prov</td>
					<td class="table-fontsize align-center">@item.oc_compte</td>
					<td class="table-fontsize align-right">@item.P_unidad_pres</td>
					<td class="table-fontsize align-right">@item.Bulto</td>
					<td class="table-fontsize align-right">@item.Unidad</td>
					<td class="table-fontsize align-right">@item.Cantidad</td>
				</tr>
			}
		</tbody>
	</table>
</div>
