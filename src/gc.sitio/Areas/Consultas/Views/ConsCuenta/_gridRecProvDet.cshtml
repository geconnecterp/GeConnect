@model GridCore<ConsRecepcionProveedorDetalleDto>

@{
    var alt = true;
    string clase = string.Empty;
    string sortDirInv = Model.SortDir.Equals("ASC") ? "DESC" : "ASC";
    string grupo = string.Empty;
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive text-nowrap  table-wrapper-300">
            <table class="table table-sm mb-0 table-hover table-wrapper-fixed-head" id="tbGridRpProvDet">
                <thead class="table-dark">
                    <tr class="header">
                        <th scope="col">Código</th>
                        <th scope="col">Producto</th>
                        <th scope="col">Orden de</th>
                        <th scope="col">Unidad de</th>
                        <th scope="col" colspan="3" class="text-sm-center bg-primary">Factura/Remito</th>
                        <th scope="col" colspan="3" class="text-sm-center bg-secondary">Recepción</th>

                    </tr>
                    <tr class="header">
                        <th scope="col" colspan="2"></th>
                        <th scope="col">Compra</th>
                        <th scope="col">Presentacion</th>
                        <th scope="col" class="text-sm-center bg-primary">Bultos</th>
                        <th scope="col" class="text-sm-center bg-primary">Cant.Sltas</th>
                        <th scope="col" class="text-sm-center bg-primary">Cantidad</th>
                        <th scope="col" class="text-sm-center bg-secondary">Bultos</th>
                        <th scope="col" class="text-sm-center bg-secondary">Cant.Sueltas</th>
                        <th scope="col" class="text-sm-center bg-secondary">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListaDatos)
                    {
                        if (alt) { clase = "alt"; alt = false; } else { clase = string.Empty; alt = true; }
                        
                        <tr class="@clase">
                            <td class="text-sm-center">@item.P_id</td>
                            <td class="text-sm-start">@item.P_desc</td>
                            <td class="text-sm-center">@item.Oc_compte</td>
                            <td class="text-sm-center">@item.Rpd_unidad_pres</td>
                            <td class="text-sm-center">@item.Rpd_bulto_compte</td>
                            <td class="text-sm-center">@item.Rpd_unidad_suelta_compte</td>
                            <td class="text-sm-center">@item.Rpd_cantidad_compte</td>
                            <td class="text-sm-center">@item.Rpd_bulto_recibidos</td>
                            <td class="text-sm-center">@item.Rpd_unidad_suelta</td>
                            <td class="text-sm-end">@item.Rpd_Cantidad</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>