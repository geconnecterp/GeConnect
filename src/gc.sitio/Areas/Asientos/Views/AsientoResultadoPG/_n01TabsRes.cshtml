    /* Estilos para el árbol de cuentas */
    .jstree-anchor.tipo-movimiento {
        font-weight: bold;
    }

    .jstree-anchor.cuenta-activo {
        color: #28a745;
    }

    .jstree-anchor.cuenta-pasivo {
        color: #dc3545;
    }

    .jstree-anchor.cuenta-patrimonio {
        color: #6f42c1;
    }

    .jstree-anchor.cuenta-ingresos {
        color: #fd7e14;
    }

    .jstree-anchor.cuenta-egresos {
        color: #17a2b8;
    }

    /* Estilos Golden para el modal */
    .modal-golden .modal-header {
        background-color: #f0ad4e;
        color: white;
        border-bottom: 3px solid #eea236;
    }

    .modal-golden .modal-footer {
        border-top: 2px solid #f5f5f5;
        background-color: #fcf8e3;
    }

    .btn-golden {
        background-color: #f0ad4e;
        border-color: #eea236;
        color: white;
    }

        .btn-golden:hover, .btn-golden:focus {
            background-color: #ec971f;
            border-color: #d58512;
            color: white;
        }

        .btn-golden:disabled {
            background-color: #f8d9ac;
            border-color: #f5c879;
        }

    .tree-container-golden {
        border: 1px solid #f0ad4e;
        border-radius: 0.25rem;
        padding: 0.5rem;
    }
</style>
