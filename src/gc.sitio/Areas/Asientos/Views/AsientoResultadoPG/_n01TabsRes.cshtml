@{
    string leyend = ViewBag.Leyenda;
}
<div class="container-fluid">
    <div class="card mb-4">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="tabAAJ" data-bs-toggle="tab" data-bs-target="#aajTab" type="button" role="tab" aria-controls="aajTab" aria-selected="true">Asientos de Ajuste</button>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane fade show active" id="aajTab" role="tabpanel" aria-labelledby="tabAAJ">

                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div id="divAsres" class="row mt-2">
                                <!-- Aquí se cargarán los asientos de ajuste -->
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                           

                            <!-- Formulario de Asiento y Botones -->
                            <div class="grid-golden mt-3">
                                <div class="grid-golden-body p-3">
                                    <div class="row align-items-center">                                        
                                        <div class="col-md-6">
                                            <div class="form-group mb-2">
                                                <label class="form-label">Cuenta de Ajuste:</label>
                                                <div class="input-group input-group-sm">
                                                    <input type="text" class="form-control" id="cuentaAjuste" name="cuentaAjuste"
                                                           placeholder="Cuenta de ajuste..." readonly
                                                           data-bs-toggle="tooltip" title="Haga clic en la lupa para seleccionar una cuenta" />
                                                    <input type="hidden" id="cuentaAjusteId" name="cuentaAjusteId" />
                                                    <button class="btn btn-outline-secondary" type="button" id="btnBuscarCuenta">
                                                        <i class="bx bx-search"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="grid-golden-footer">
                                    <div class="row">
                                        <div class="col-12 text-end">
                                            <button class="btn btn-danger btn-sm" id="btnCancelarAjuste">
                                                <i class="bx bx-x-circle me-1"></i>Cancelar
                                            </button>
                                            <button class="btn btn-success btn-sm" id="btnConfirmarAjuste">
                                                <i class="bx bx-check-circle me-1"></i>Confirmar
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal para selección de cuentas -->
<!-- Modal para selección de cuentas -->
<div class="modal fade modal-golden" id="selectorPlanCuentasModal" tabindex="-1" aria-labelledby="selectorPlanCuentasModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="selectorPlanCuentasModalLabel">
                    <i class="bx bx-list-ul"></i> Seleccionar Cuenta Contable
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bx bx-search"></i></span>
                        <input type="text" class="form-control" id="txtBuscarCuentaPlan" placeholder="Buscar cuenta mientras escribe...">
                    </div>
                    <small class="form-text text-muted">La búsqueda se realiza automáticamente mientras escribe</small>
                </div>

                <!-- Área para mostrar resultados de búsqueda -->
                <div id="resultadosBusqueda" class="mb-2" style="display: none;"></div>

                <div id="cuentasTree" class="tree-container-golden jstree-golden" style="max-height: 350px; overflow-y: auto;"></div>
                <div class="mt-3 small">
                    <div class="d-flex flex-wrap text-muted">
                        <span class="me-2 d-flex align-items-center">
                            <i class="bx bx-wallet text-success me-1"></i> Activo
                        </span>
                        <span class="me-2 d-flex align-items-center">
                            <i class="bx bx-trending-down text-danger me-1"></i> Pasivo
                        </span>
                        <span class="me-2 d-flex align-items-center">
                            <i class="bx bx-building-house text-purple me-1"></i> Patrimonio
                        </span>
                        <span class="me-2 d-flex align-items-center">
                            <i class="bx bx-dollar-circle text-warning me-1"></i> Ingresos
                        </span>
                        <span class="me-2 d-flex align-items-center">
                            <i class="bx bx-money-withdraw text-info me-1"></i> Egresos
                        </span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bx bx-x me-1"></i> Cerrar
                </button>
                <button type="button" class="btn btn-golden" id="btnSeleccionarCuenta" disabled>
                    <i class="bx bx-check me-1"></i> Seleccionar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Estilos para el árbol de cuentas -->
