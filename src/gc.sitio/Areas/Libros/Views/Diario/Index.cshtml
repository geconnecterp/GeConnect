@{
    Layout = "~/views/shared/_Layout.cshtml";

    var filtro = new QueryAsiento() { Modelo = ModeloFilter.LDIARIO };
    var filtro2 = new QueryFilters() { Modelo = ModeloFilter.LDIARIO };
}
@section styles {
    <link rel="stylesheet" href="~/css/simplePagination.css" />
    <link rel="stylesheet" href="~/lib/jstree/themes/default/style.min.css" />
    <!-- Agregar esto al <head> de la página o en un archivo CSS si no existe ya -->
    <style>
        #tbMayor tbody tr.selectedEdit-row,
        #tbMayorDiario tbody tr.selectedEdit-row {
            background-color: #e7f3ff !important;
            box-shadow: inset 0 0 0 1px #0d6efd;
            font-weight: bold;
        }

        #tbMayor tbody tr,
        #tbMayorDiario tbody tr,
        #tbDiario tbody tr {
            cursor: pointer;
        }
    </style>
}

<div class="container">
    <partial name="_botonera" model="filtro2" />
</div>
<div class="collapse show" id="divFiltro">
    <partial name="_filtroLibro" model="filtro" />
    @Html.Hidden("pagEstado", false)
</div>
<div class="collapse" id="divDetalle">
    <partial name="_n01TabsDiario" />
</div>

<div class="row">
    <div id="divResultados" class="collapse">
        <!-- Aquí se cargarán los resultados -->
    </div>
</div>
<div id="modalGestorDocumental"></div>

@section scripts {
    <script type="text/javascript">
        var homeLDUrl = "@Url.Action("index", "diario", new { area = "Libros" })";
        var obtenerEjerciciosUrl = "@Url.Action("ObtenerEjercicios", "diario", new { area = "Libros" })";
        var obtenerLDUrl = "@Url.Action("obtenerLD", "diario", new { area = "Libros" })";

        var buscarMetadataURL = "@Url.Action("ObtenerDatosPaginacion", "diario", new { area = "Libros" })";

        // Gestor de impresión
        var repoApiUrl = '@Url.Action("ObtenerPdfDesdeAPI", "GestorImpresion", new { area = "ControlComun" })';
        var OrquestadorDeModulosUrl = "@Url.Action("OrquestadorDeModulos", "GestorImpresion", new { area = "ControlComun" })";
        var presentarArchivosUrl = "@Url.Action("presentarArchivos", "GestorImpresion", new { area = "ControlComun" })";
        var enviarEmailUrl = "@Url.Action("EnviarEmail", "GestorImpresion", new { area = "ControlComun" })";
        var enviarWhatsAppUrl = "@Url.Action("EnviarWhatsApp", "GestorImpresion", new { area = "ControlComun" })";

    </script>

    <script src="~/lib/jstree/jstree.min.js"></script>
    <script src="~/js/mask/jquery.inputmask.min.js"></script>
    <script src="~/js/plugins/jquery.simplePagination.js"></script>

    <script src="~/js/app/areas/docmngr/docmanager.js"></script>
    <script src="~/js/app/areas/abms/abmsettings.js"></script>
    <script src="~/js/app/areas/abms/abmcommons.js"></script>
    <script src="~/js/app/areas/libros/ldiario.js"></script>
}
