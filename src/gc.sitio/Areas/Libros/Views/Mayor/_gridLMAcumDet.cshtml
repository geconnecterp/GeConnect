@model GridCoreSmart<LMayorRegDto>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h6 class="mb-0">
            <i class="bx bx-calendar-event me-1"></i>
            Detalle del día @ViewBag.FechaSeleccionada
        </h6>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table id="tbDetalleDia" class="table table-sm table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Nº Movimiento</th>
                        <th>Concepto</th>
                        <th class="text-end">Debe</th>
                        <th class="text-end">Haber</th>
                        <th class="text-end">Saldo</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ListaDatos == null || Model.ListaDatos.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center">No hay movimientos para esta fecha.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model.ListaDatos)
                        {
                            <tr data-dia-movi="@item.Dia_movi">
                                <td>@item.Dia_movi</td>
                                <td>@item.Dia_desc</td>
                                <td class="text-end">@Model.FormatearDato(item.Dia_debe, FormatDato.Monto)</td>
                                <td class="text-end">@Model.FormatearDato(item.Dia_haber, FormatDato.Monto)</td>
                                <td class="text-end">@Model.FormatearDato(item.Dia_saldo, FormatDato.Monto)</td>
                            </tr>
                        }

                        // Mostrar totales al final
                        <tr class="table-info">
                            <td colspan="2" class="fw-bold">Totales del día:</td>
                            <td class="text-end fw-bold">@Model.FormatearDato(Model.ListaDatos.Sum(x => x.Dia_debe), FormatDato.Monto)</td>
                            <td class="text-end fw-bold">@Model.FormatearDato(Model.ListaDatos.Sum(x => x.Dia_haber), FormatDato.Monto)</td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-light">
        <p class="small text-muted mb-0">
            <i class="bx bx-bulb"></i>
            Doble clic en una fila para ver el detalle completo del asiento.
        </p>
    </div>
</div>
