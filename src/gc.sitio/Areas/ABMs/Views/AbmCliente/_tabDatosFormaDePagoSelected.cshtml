@model CuentaAbmFPSelectedModel
@{
	var fp = Model.ComboFormasDePago;
	var tipoCueBco = Model.ComboTipoCuentaBco;
}

<div class="row" style="padding-top: 10px;">
	<div class="row mt-1">
		<div class="input-group input-group-sm">
			<span class="input-group-text fixed-lbl-for-abm-70">FP: </span>
			@Html.DropDownListFor(m => Model.FormaDePago.fp_id, fp, "Seleccionar...", new { @id = "listaFP", @class = "form-control" })
			<span class="input-group-text fixed-lbl-for-abm-70">Plazo: </span>
			<input type="number" asp-for="FormaDePago.fp_dias" class="form-control"  />
		</div>
	</div>
	<div class="row mt-1">
		<div class="input-group input-group-sm">
			<span class="input-group-text fixed-lbl-for-abm-70">Obs: </span>
			<input type="text" asp-for="FormaDePago.cta_obs.ToUpper()" class="form-control" />
		</div>
	</div>
	<div class="row mt-1">
		<div class="input-group input-group-sm">
			<span class="input-group-text fixed-lbl-for-abm-70">Cta: </span>
			@Html.DropDownListFor(m => Model.FormaDePago.tcb_id, tipoCueBco, "Seleccionar...", new { @id = "listaTipoCueBco", @class = "form-control" })
			<span class="input-group-text fixed-lbl-for-abm-70">N°: </span>
			<input type="text" asp-for="FormaDePago.cta_bco_cuenta_nro" class="form-control"  />
		</div>
	</div>
	<div class="row mt-1">
		<div class="input-group input-group-sm">
			<span class="input-group-text fixed-lbl-for-abm-70">CBU: </span>
			<input type="text" asp-for="FormaDePago.cta_bco_cuenta_cbu" class="form-control"  />
		</div>
	</div>
	<div class="row mt-1">
		<div class="input-group input-group-sm">
			<span class="input-group-text fixed-lbl-for-abm-70">Valores a: </span>
			<input type="text" asp-for="FormaDePago.cta_valores_a_nombre" class="form-control"  />
		</div>
	</div>
</div>