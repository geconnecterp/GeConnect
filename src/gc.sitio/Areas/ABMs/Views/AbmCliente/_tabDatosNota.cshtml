@model CuentaABMNotaModel
@{
}
<div class="row">
	<div class="col-md-8">
		<div class="row">
			<div class="card">
				<div class="card-body mt-1">
					<div class="table-responsive text-nowrap table-wrapper-200-full">
						<table class="table table-sm mb-0 table-hover" id="tbClienteNotas">
							<thead class="table-dark">
								<tr class="header">
									<th class="col-header-small align-center">Nota</th>
									<th class="col-header-small align-center">Usuario</th>
									<th class="col-header-small align-center">Fecha</th>
									<th style="width:0%; display:none;">usu_id</th>
									<th style="width:0%; display:none;">usu_id_logueado</th>
									<th style="width:0%; display:none;">puedo_editar</th>
								</tr>
							</thead>
							<tbody>
								@if (Model != null && Model.CuentaNotas != null && Model.CuentaNotas.ListaDatos != null)
								{
									@foreach (var item in Model.CuentaNotas.ListaDatos)
									{
										<tr onclick="selectRegCli(this, 'tbClienteNotas')" ondblclick="selectRegDbl(this, 'tbClienteNotas')">
											<td class="align-left">@item.nota</td>
											<td class="align-left">@item.usu_apellidoynombre</td>
											<td class="align-center">@item.fecha.ToString("dd/MM/yyyy")</td>
											<td style="display:none;">@item.usu_id</td>
											<td style="display:none;">@item.usu_id_logueado</td>
											<td style="display:none;">@item.puedo_editar</td>
										</tr>
									}
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
		<div id="divDatosDeNotaSelected">
			<div class="row" style="padding-top: 10px;">
