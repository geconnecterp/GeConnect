@model QueryFilters
@{
    Layout = "~/views/shared/_Layout.cshtml";
    var filtro = new QueryFilters() { Rel01 = new List<string>(), Rel02 = new List<string>() };
}

@section styles {
    <link rel="stylesheet" href="~/css/simplePagination.css" />
}

<div class="container">
    <div class="d-flex justify-content-sm-start">
        <button id="btnFiltro" class="btn btn-primary btn-sm mt-1 me-1" type="button" data-bs-toggle="collapse" data-bs-target="#divFiltro" aria-expanded="true" aria-controls="divFiltro">
            <i class="bx bx-filter bx-xs"></i>
        </button>

        <button class="btn btn-primary btn-sm mt-1 me-1" type="button" data-bs-toggle="collapse" data-bs-target="#divDetalle" aria-expanded="true" aria-controls="divDetalle">
            <i class="bx bx-arrow-to-bottom bx-xs"></i>
        </button>
    </div>
    <div class="collapse" id="divFiltro" style="">
        <partial name="_filtroBase" model="filtro" />
        @Html.Hidden("pagEstado", false);
    </div>
    <div class="collapse" id="divDetalle" style="">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button type="button" class="nav-link active" role="tab" data-bs-toggle="tab" data-bs-target="#navs-top-home" aria-controls="navs-top-home" aria-selected="true">
                    Cliente
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button type="button" class="nav-link" role="tab" data-bs-toggle="tab" data-bs-target="#navs-top-profile" aria-controls="navs-top-profile" aria-selected="false" tabindex="-1">
                    Formas de Pago
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button type="button" class="nav-link" role="tab" data-bs-toggle="tab" data-bs-target="#navs-top-messages" aria-controls="navs-top-messages" aria-selected="false" tabindex="-1">
                    Otros Contactos
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button type="button" class="nav-link" role="tab" data-bs-toggle="tab" data-bs-target="#navs-top-notes" aria-controls="navs-top-notes" aria-selected="false" tabindex="-1">
                    notas
                </button>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade show active" id="navs-top-home" role="tabpanel">
                <div id="divDatosCliente">
                </div>
            </div>
            <div class="tab-pane fade" id="navs-top-profile" role="tabpanel">
                <div id="divFormasDePago">
                </div>
            </div>
            <div class="tab-pane fade" id="navs-top-messages" role="tabpanel">
                <div id="divOtrosContactos">
                </div>
            </div>
            <div class="tab-pane fade" id="navs-top-notes" role="tabpanel">
                <div id="divNotas">
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @* <partial name="_gridAbmProds"  /> *@
        <div id="divGrilla">
            <p style="background-color:gray">
                <h5>No se han especificado datos aún.</h5>
            </p>
        </div>
    </div>
    <div class="row d-flex p-2 flex-fill">
        <div class="col-2"></div>
        <div id="divPaginacion" class="">
          
        </div>
        <div class="col-2"></div>
    </div>

   

</div>


@section scripts {
    <script type="text/javascript">
        var totalRegs = 0;
        var pagRegs = 0;
        var pags = 0;
        var pagina = 1;
        var search = "";
        var funcCallBack = "buscarClientes";
        var dataBak = {};

        var buscarUrl = "@Url.Action("buscar", "abmcliente", new { area = "abms" })";
        var buscarProveedorUrl = "@Url.Action("Buscar", "proveedor", new { area = "gestion" })";
        var autoComRel01Url = "@Url.Action("BuscarR01", "abmcliente", new { area = "abms" })";
        var autoComRel02Url = "@Url.Action("BuscarR02", "abmcliente", new { area = "abms" })";
        var buscarMetadataURL = "@Url.Action("ObtenerDatosPaginacion", "abmcliente", new { area = "abms" })";

    </script>
    <script src="~/js/plugins/jquery.simplePagination.js"></script>
    <script src="~/js/app/areas/abms/abmcliente.js" type="text/javascript"></script>
    <script src="~/js/app/busquedas.js"></script>
}