@model CuentaAbmOCModel
@{
	var tipoCon = Model.ComboTipoContacto;
}
<div class="row">
	<div class="col-md-8">
		<div class="row">
			<div class="card">
				<div class="card-body mt-1">
					<div class="table-responsive text-nowrap table-wrapper-200-full">
						<table class="table table-sm mb-0 table-hover" id="tbClienteOtroContacto">
							<thead class="table-dark">
								<tr class="header">
									<th class="col-header-small align-center">Contacto</th>
									<th class="col-header-small align-center">Tipo</th>
									<th class="col-header-small align-center">Email</th>
									<th class="col-header-small align-center">Celular</th>
									<th class="col-header-small align-center">TE</th>
									<th style="width:0%; display:none;">tc_id</th>
								</tr>
							</thead>
							<tbody>
								@if (Model != null && Model.CuentaOtrosContactos != null && Model.CuentaOtrosContactos.ListaDatos != null)
								{
									@foreach (var item in Model.CuentaOtrosContactos.ListaDatos)
									{
										<tr onclick="selectRegCli(this, 'tbClienteOtroContacto')" ondblclick="selectRegDbl(this, 'tbClienteOtroContacto')">
											<td class="align-left">@item.cta_nombre</td>
											<td class="align-left">@item.tc_desc</td>
											<td class="align-left">@item.cta_email</td>
											<td class="align-left">@item.cta_celu</td>
											<td class="align-left">@item.cta_te</td>
											<td style="display:none;">@item.tc_id</td>
										</tr>
									}
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
		<div id="divDatosDeOCSelected">
			<div class="row" style="padding-top: 10px;">
				<div class="row mt-1">
					<div class="input-group input-group-sm">
						<span class="input-group-text fixed-lbl-for-abm-70">Contacto: </span>
						<input type="text" asp-for="OtroContacto.Cta_Nombre" class="form-control activable" />
					</div>
				</div>
				<div class="row mt-1">
					<div class="input-group input-group-sm">
						<span class="input-group-text fixed-lbl-for-abm-70">Tipo: </span>
						@Html.DropDownListFor(m => Model.OtroContacto.Tc_Id, tipoCon, "Seleccionar...", new { @id = "listaTC", @class = "form-control activable" })
					</div>
				</div>
				<div class="row mt-1">
					<div class="input-group input-group-sm">
						<span class="input-group-text fixed-lbl-for-abm-70">Celu: </span>
						<input type="text" asp-for="OtroContacto.Cta_Celu" class="form-control activable" />
					</div>
				</div>
				<div class="row mt-1">
					<div class="input-group input-group-sm">
						<span class="input-group-text fixed-lbl-for-abm-70">Email: </span>
						<input type="text" asp-for="OtroContacto.Cta_Email" class="form-control activable" />
					</div>
				</div>
				<div class="row mt-1">
					<div class="input-group input-group-sm">
						<span class="input-group-text fixed-lbl-for-abm-70">TE: </span>
						<input type="text" asp-for="OtroContacto.Cta_Te" class="form-control activable" />
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
