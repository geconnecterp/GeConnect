@using gc.infraestructura.ViewModels

@model EmailDocumentViewModel

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="emailTo">Destinatarios:</label>
                <input type="text" class="form-control" id="emailTo"
                       placeholder="Ingrese correos electrónicos separados por punto y coma (;)"
                       value="@(Model.ToEmails != null ? string.Join(";", Model.ToEmails) : "")">
                <small class="form-text text-muted">Ejemplo: correo1@ejemplo.com; correo2@ejemplo.com</small>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            <div class="form-group">
                <label for="emailSubject">Asunto:</label>
                <input type="text" class="form-control" id="emailSubject" value="@Model.Subject">
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            <div class="form-group">
                <label for="emailTemplate">Plantilla:</label>
                <select class="form-control" id="emailTemplate">
                    <option value="">Seleccionar plantilla...</option>
                    <option value="default" @(Model.DefaultTemplate == "default" ? "selected" : "")>Plantilla predeterminada</option>
                    <option value="invoice" @(Model.DefaultTemplate == "invoice" ? "selected" : "")>Plantilla de facturas</option>
                    <option value="receipt" @(Model.DefaultTemplate == "receipt" ? "selected" : "")>Plantilla de recibos</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            <div class="form-group">
                <label for="emailBody">Mensaje:</label>
                <textarea class="form-control" id="emailBody" rows="5">@Model.Body</textarea>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            <h5>Documentos adjuntos</h5>
            <div id="emailAttachments" class="attachment-list">
                @if (Model.Attachments != null && Model.Attachments.Any())
                {
                    @foreach (var attachment in Model.Attachments)
                    {
                        <div class="attachment-item" data-filename="@attachment.FileName">
                            <i class="fas fa-paperclip"></i> @attachment.FileName
                            <button type="button" class="btn btn-sm btn-danger remove-attachment">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info">
                        No hay documentos adjuntos seleccionados.
                    </div>
                }
            </div>
            <button type="button" class="btn btn-sm btn-outline-primary mt-2" id="btnAddAttachment">
                <i class="fas fa-plus"></i> Agregar adjunto
            </button>
        </div>
    </div>
</div>
