@using gc.sitio.Areas.GesImpresion.Models
@model PrintDocumentViewModel

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-12">
            <h5>Seleccione los documentos a imprimir</h5>
            <div class="document-selection">
                @if (Model.Documents != null && Model.Documents.Any())
                {
                    <div class="list-group">
                        @foreach (var doc in Model.Documents)
                        {
                            <div class="list-group-item">
                                <div class="form-check">
                                    <input class="form-check-input document-checkbox" type="checkbox"
                                           value="@doc.Id" id="doc_@doc.Id"
                                           data-document-type="@doc.Type.ToString().ToLower()"
                                    @(doc.IsSelected ? "checked" : "")>
                                    <label class="form-check-label" for="doc_@doc.Id">
                                        @doc.Name
                                        <small class="text-muted d-block">@doc.Description</small>
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        No hay documentos disponibles para imprimir en este contexto.
                    </div>
                }
            </div>

            @if (Model.ShowDuplicates)
            {
                <div class="form-check mt-3">
                    <input class="form-check-input" type="checkbox" id="printDuplicates">
                    <label class="form-check-label" for="printDuplicates">
                        Imprimir duplicados
                    </label>
                </div>
            }

            @* @if (Model.ShowCertificates)
            {
                <div class="form-check mt-2">
                    <input class="form-check-input" type="checkbox" id="printCertificates">
                    <label class="form-check-label" for="printCertificates">
                        Incluir certificados
                    </label>
                </div>
            } *@
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <div class="form-group">
                <label for="printCopies">Número de copias:</label>
                <input type="number" class="form-control" id="printCopies" min="1" value="1">
            </div>
        </div>
    </div>
</div>